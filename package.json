{
  "name": "game-rps",
  "version": "1.0.0",
  "main": "index.html",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build",
    "build": "yarn clean && yarn build:js",
    "build:js": "yarn browserify -t ejsify src/client/*.js src/common/*.js -o build/bundle.js",
    "build:styles": "find src/client -name '*.css' -exec cat {} + > build/styles.css",
    "dev": "yarn watchify -t ejsify src/client -o build/bundle.js -v",
    "lint:ejs": "yarn ejslint src/client/**/*.ejs",
    "lint:js": "yarn eslint src",
    "lint": "yarn lint:js && yarn lint:ejs",
    "test": "yarn mocha"
  },
  "dependencies": {
    "browserify": "^16.2.2",
    "ejs": "^2.6.1",
    "ejsify": "^1.0.0",
    "websocket": "^1.0.26"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "ejs-lint": "^0.3.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "watchify": "^3.11.0"
  }
}
