<%
  const outcomeMessages = {
    win: 'You win!',
    lose: 'You lose!',
    tie: 'Stalemate!'
  }

  const headings = {
    'choose-weapon': 'Choose your weapon',
    'round-end': outcomeMessages[state.outcome],
    'wait-enemy': 'Waiting for enemy...'
  }
%>

<h2><%= headings[state.step] %></h2>

<button id="next-round" <%= state.step !== 'round-end' ? 'hidden' : '' %>>Again!</button>

<ul>
  <% Object.keys(weapons).forEach(key => { %>
    <li class="<%= weapons[key] === state.myWeapon ? 'active' : '' %>">
      <button
              id="weapon-<%= key %>"
              <%= state.step !== 'choose-weapon' ? 'disabled' : '' %>
      ><%= key %></button>
    </li>
  <% }) %>
</ul>

<h3>Enemy</h3>

<ul>
  <% Object.keys(weapons).forEach(key => { %>
    <li class="<%= weapons[key] === state.enemyWeapon ? 'active' : '' %>">
      <%= key %>
    </li>
  <% }) %>
</ul>
